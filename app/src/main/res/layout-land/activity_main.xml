<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A587A4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSumar"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="5dp"
        android:text="@string/sumar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonRestar"
        android:layout_width="113dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="84dp"
        android:text="RESTAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonZoommas"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:text="ZOOM+"
        app:layout_constraintEnd_toEndOf="@+id/buttonSumar"
        app:layout_constraintStart_toStartOf="@+id/buttonSumar"
        app:layout_constraintTop_toBottomOf="@+id/buttonSumar" />

    <Button
        android:id="@+id/buttonZoommenos"
        android:layout_width="113dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="84dp"
        android:text="ZOOM-"
        app:layout_constraintEnd_toEndOf="@+id/buttonRestar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonRestar"
        app:layout_constraintTop_toBottomOf="@+id/buttonRestar" />

    <Button
        android:id="@+id/buttonOcultar"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="4dp"
        android:text="OCULTAR"
        app:layout_constraintEnd_toEndOf="@+id/buttonZoommas"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonZoommas"
        app:layout_constraintTop_toBottomOf="@+id/buttonZoommas" />

    <Button
        android:id="@+id/buttonReset1"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Reiniciar"
        app:layout_constraintEnd_toEndOf="@+id/buttonZoommenos"
        app:layout_constraintStart_toStartOf="@+id/buttonZoommenos"
        app:layout_constraintTop_toBottomOf="@+id/buttonZoommenos" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="185dp"
        android:layout_height="156dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>